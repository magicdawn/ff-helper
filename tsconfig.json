{
  "include": ["ts-src/**/*"],
  "compilerOptions": {
    "rootDir": "ts-src",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "CommonJS",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "ts-node": {
    "swc": true
  }
}
